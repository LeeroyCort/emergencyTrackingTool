{% extends 'base.html.twig' %}

{% block title %}Hello AssignmentsController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    
    .assignmentCategorys { display: flex; justify-content: center; gap: 20px; }
    .assignmentCategory { width: 200px; height: 300px; background-color: #ccc; border: 1px solid #444; line-height: 300px; text-align: center; }
    
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}</h1>
    
    <div class="assignmentCategorys">
        {% for assignmentCategory in assignmentCategorys %}

            <div class="assignmentCategory">
                <a href="{{ path('app_startNewAssignment', {categoryId: assignmentCategory.id}) }}">
                    {{ assignmentCategory.name }}
                </a>
            </div>
        {% endfor  %}
    </div>
</div>
{% endblock %}
